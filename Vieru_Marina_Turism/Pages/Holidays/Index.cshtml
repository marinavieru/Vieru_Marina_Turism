@page "/"
@model Vieru_Marina_Turism.Pages.Holidays.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Destination:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Holiday[0].Destinations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Holiday[0].CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Holiday[0].CheckOut)
            </th>

            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.PriceSort">

                @Html.DisplayNameFor(model => model.Holiday[0].Price)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Holiday[0].Guests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Holiday[0].Flight.AirlineName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Holiday) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destinations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.AirlineName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
